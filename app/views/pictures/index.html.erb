<h1>Pictures</h1>

<table>
  <tr>
    <th>Picture</th>
    <th>Tags</th>
    <th>Preview</th>
    <th></th>
    <th></th>
  </tr>

<% @pictures.each do |picture| %>
  <tr>
    <td><%= picture.path %></td>
    <td><%= picture.tags.map{|t| t.name + ' '}.to_s.strip.gsub(/ /, ', ') %></td>
    <td><%= image_tag "menu_items/#{picture.path}", :height => '42px', :width => '42px' %></td>
    <td><%= link_to 'Edit', edit_picture_path(picture) %></td>
    <td><%= link_to 'Delete', picture, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<div class="pagination">
  <%= will_paginate @pictures, :container => false %>
</div>