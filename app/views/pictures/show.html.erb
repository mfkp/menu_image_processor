<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @picture.name %>
</p>

<p>
  <b>Image:</b>
  <%= @picture.path %>
</p>

<p>
  <b>Tags:</b>
  <%= @picture.tags.map{|t| t.name + ' '}.to_s.strip.gsub(/ /, ', ') %>
</p>

<%= image_tag "menu_items/#{@picture.path}" %><br/><br/>


<%= link_to 'Edit', edit_picture_path(@picture) %>
